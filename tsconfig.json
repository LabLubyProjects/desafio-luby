{
  "compilerOptions": {
      "target": "es2017",
      "moduleResolution": "node",
      "module": "commonjs",
      "lib": ["es2017"],
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "useUnknownInCatchVariables": false,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "resolveJsonModule": true,
      "alwaysStrict": true,
      "removeComments": true,
      "noImplicitReturns": true,
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": false,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
          "@src/*":["./src/*"],
      },
      "rootDirs": [
          "./src",
      ],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
  },
  "include": [
      "./src/**/*.ts", "src/config/databaseConfig.js",
  ],
  "exclude": [
      "./node_modules/*",
      "dist"
  ]
}